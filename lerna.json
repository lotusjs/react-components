{
  "version": "independent",
  "workspaces": ["packages/*"],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "npmClient": "pnpm",
      "verifyAccess": false,
      "ignoreChanges": [
        "*.md",
        "lerna.json",
        "**/test/**",
        "**/docs/**",
        "**/dist/**",
        "**/node_modules/**"
      ],
      "message": "chore(release): publish"
    }
  }
}
